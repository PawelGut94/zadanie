{% extends "base.html.twig" %}

{% block main_content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">{{ 'book.title' | trans }}</th>
            <th scope="col">{{ 'book.author' | trans }}</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>
                    <a href="{{ path('detailsBook',{ 'id' : book.id}) }}">
                        <button type="button" class="btn btn-success">{{ 'book.details' | trans }}</button>
                    </a>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

{% endblock main_content %}